<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/b_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="id"
            android:textColor="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/b_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="price"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/priceShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/b_price"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:text="ราคา: ฿ "
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/b_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/b_price"
                android:text="date"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dateShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/priceShow"
                android:layout_toLeftOf="@+id/b_date"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:text="วันที่วางแผง: "
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/b_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/priceShow"
                android:text="bookname"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/authorShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/b_name"
                android:text="เขียนโดย "
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/b_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_name"
                android:layout_toEndOf="@+id/authorShow"
                android:layout_toLeftOf="@+id/dateShow"
                android:layout_toRightOf="@+id/authorShow"
                android:text="author"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/transShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/authorShow"
                android:text="แปลโดย "
                android:textColor="@android:color/holo_orange_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/b_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_author"
                android:layout_toRightOf="@+id/transShow"
                android:text="translator"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/publishShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transShow"
                android:text="สำนักพิมพ์ "
                android:textColor="@android:color/holo_orange_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/b_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_trans"
                android:layout_toRightOf="@+id/publishShow"
                android:text="publisher"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>